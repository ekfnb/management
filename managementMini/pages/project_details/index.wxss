/* pages/project_details/index.wxss */
.main{
    width: 95%;
    margin: 0 auto;
}
.details_content{
    width: 100%;
}
.details_title{
    text-align: center;
    font-size: 50rpx;
    font-weight: bold;
}
.details_alias{
    width: 100%;
    margin-top: 20rpx;
    text-align: center;
    color: #666;
    margin: 0 auto;
    margin-top: 20rpx; 
}
.details_text{
    display: block;
    line-height: 50rpx;
    width: 100%;
}
.details_date{
    width: 100%;
    color: #999;
}
.details_date_title{
    float: right;
}
.dates{
    float: right;
}
.recom_title{
    width: 100%;
    font-size: 39rpx;
}
.make_recommendations{
    margin-top: 50rpx;
    width: 100%;
}
.make_recommendations textarea{
    width: 100%;
    min-height: 200rpx;
    border: 2rpx solid #ccc;
    margin-top: 20rpx;
}
.make_recommendations button{
    background-color: var(--themeColor);
    margin: 20rpx auto;
    float: right;
    font-size: 24rpx;
    color: #fff;
}
/* 用户个人建议容器 */
.personal_advice_content{
    width: 100%;
    margin-top: 100rpx;
}
/* 最近用户建议容器 */
.release_info{
    width: 100%;
    margin-top: 15rpx;
}
.personal_advice_title,.release_title{
    width: 100%;
    margin: 20rpx 0;
    font-weight: bold;
    padding: 18rpx 0;
    color: #ffffff;
}
.text{
    overflow: scroll;
}
.info_content{
    width: 100%;
    padding-bottom: 20rpx;
    margin: 10rpx auto;
    border-bottom: 1rpx solid #eee;
}
.user_info{
    width: 100%;
    height: 70rpx;
    display: flex;
    /* margin-bottom: 20rpx; */
}
.user_pic{
    flex: 1;
    height: 48rpx;
}
.user_pic image{
    border-radius: 10%;
    height: 70rpx;
}
.user_content{
    height: 70rpx;
    margin-left: 10rpx;
    flex: 9;
    font-size: 30rpx;
    color: var(--themeColor);
    position: relative;
}
.user_content text{
    position: absolute;
    left: 0;
    top: 30rpx;
}
.remove_proposal{
    width: 38rpx;
    position: absolute;
    right: 0;
    top: 0;
}
.proposal_list{
    width: 100%;
    margin: 20rpx auto;
    font-size: 28rpx;
    text-indent: 2em;
}
.proposal_date{
    font-size: 20rpx;
}