.login_title{
  width: 100%;
  height: 360rpx;
  padding-top: 100rpx;  
  text-align: center;
  font-size: 60rpx;
  background-color: var(--themeColor);
  font-family:"楷体";
  color: #fff;
  border-bottom-left-radius:30%;
  border-bottom-right-radius:30%;
}
.login_form{
  width: 80%;
  margin: 0 auto;
  margin-top: 100rpx;
}
.regiser_name{
  width: 80%;
  display: flex;
  margin: 0 auto;
}
.username_reg{
  flex: 1.7;
  font-size: 28rpx;
  display: flex;
  line-height: 80rpx;
}
.username_login,.password_login{
  border-bottom: 2rpx solid #ccc;
  flex: 8;
  margin: 0 auto;
  margin-top: 20rpx;
}

.loginBut{
  width: 70%;
  font-size: 30rpx;
  color: #fff;
  background-color: var(--themeColor);
  margin: 20rpx auto;
}
.logoutBut{
  display: flex;
  width: 100%;
  height: 60rpx;
  position: fixed;
  bottom: 20rpx;
  left: 0;
}
.logout{
  width: 50%;
  height: 60rpx;
  background-color: #fff;
  font-size: 26rpx;
  color: #999;
  margin: 0 auto;
}